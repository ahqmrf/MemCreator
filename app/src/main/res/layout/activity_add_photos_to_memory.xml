<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_photos_to_memory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.lenovo.memcreator.activities.AddPhotosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:ignore="DisableBaselineAlignment">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/choose_images"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btn_capture"
            android:text="Capture new photo"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="9">
        <android.support.v7.widget.RecyclerView
            android:background="@drawable/background"
            android:id="@+id/folder_list"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="right"
                android:layout_marginRight="3dp"
                tools:ignore="ButtonStyle,HardcodedText,NestedWeights,RtlHardcoded" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Next"
                android:layout_marginLeft="3dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="right"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
