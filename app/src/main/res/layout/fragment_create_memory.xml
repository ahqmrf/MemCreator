<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    tools:context="com.example.lenovo.memcreator.fragments.CreateMemoryFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_a_new_memory"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="8"
            tools:ignore="DisableBaselineAlignment">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/memory_name"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/memory_name"
                android:layout_marginLeft="15dp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="top"
                android:textCursorDrawable="@null"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textColor="#c2000000"
                android:background="@drawable/edit_text_border"
                android:layout_weight="5"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:weightSum="8"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_marginTop="5dp"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/no_image"
                    android:scaleType="centerCrop"
                    android:layout_weight="6"
                    android:contentDescription=""
                    tools:ignore="ContentDescription,NestedWeights" />

                <Button
                    android:id="@+id/btn_add_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/browse"
                    android:textAllCaps="false"
                    android:layout_weight="2"
                    />

                <Button
                    android:id="@+id/btn_capture_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/capture"
                    android:textAllCaps="false"
                    android:layout_weight="2"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                tools:ignore="RtlHardcoded">

                <TextView

                    android:text="@string/post_mem"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="17sp"
                    />

                <EditText
                    android:id="@+id/memory_text"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:minLines="6"
                    android:gravity="top"
                    android:textCursorDrawable="@null"
                    android:inputType="textMultiLine"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:textColor="#c2000000"
                    android:background="@drawable/edit_text_border"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_create_memory"
            android:layout_marginTop="10dp"
            android:text="@string/create_memory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>
    </LinearLayout>





</FrameLayout>
